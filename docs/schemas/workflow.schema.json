{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phoenix Workflow Definition",
  "type": "object",
  "required": ["schema_version", "name", "steps"],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["1.0.0"]
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "action", "params"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "action": { "type": "string", "minLength": 1 },
          "params": { "type": "object" }
        }
      }
    }
  }
}
