{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phoenix Pack Manifest",
  "type": "object",
  "required": ["schema_version", "name", "version", "workflows"],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["1.0.0"]
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "workflows": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "assets": {
      "type": "string"
    }
  }
}
