#!/bin/bash
# BootForge AppImage Launcher
set -e

HERE="$(dirname "$(readlink -f "${0}")")" 
cd "$HERE"

# Check if we can run
if [ ! -f "./BootForge" ]; then
    echo "Error: BootForge executable not found"
    exit 1
fi

# Make sure it's executable
chmod +x "./BootForge"

# Launch with all arguments
exec "./BootForge" "$@"
