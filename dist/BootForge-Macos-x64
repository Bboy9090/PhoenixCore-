#!/bin/bash
# BootForge macOS Executable  
# This is a Python-based executable that works on any macOS system with Python

echo "Starting BootForge..."

# Check if Python is available
if ! command -v python3 &> /dev/null; then
    if ! command -v python &> /dev/null; then
        echo "Error: Python is not installed"
        echo "Please install Python from https://python.org"
        echo "Then run: python3 main.py $@"
        exit 1
    else
        PYTHON_CMD="python"
    fi
else
    PYTHON_CMD="python3"
fi

# Check if PyQt6 is available
$PYTHON_CMD -c "import PyQt6" 2>/dev/null
if [ $? -ne 0 ]; then
    echo "Installing PyQt6..."
    $PYTHON_CMD -m pip install PyQt6
fi

# Run BootForge
cd "$(dirname "$0")"
$PYTHON_CMD main.py "$@"